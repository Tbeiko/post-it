<ul class="nav">
  <li>
    <%= link_to "TimPosts", root_path, :class => 'brand' %>
  </li>
</ul>

<div class='btn-group nav_item'>
  <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    Categories <span class='caret'></span>
  <%end%>
  <ul class='dropdown-menu'>
    <% Category.all.each do |category| %>
      <li><%= link_to category.name, category_path(category)%></li>
    <% end %>
    <% if logged_in? %>
      <li class='divider'></li>
      <li>
        <%= link_to(new_category_path) do %>
          <i class='icon-plus'></i>
          New Category
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<% if logged_in? %>  

<div class='btn-group pull-right'>
    <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      <%= current_user.username %> <span class='caret'></span>
    <%end%>
    <ul class='dropdown-menu'>
      <li>
        <%= link_to user_path(current_user) do %>
          <i class='icon-user'></i>
          Profile
        <% end %>
      </li>
      <li>
        <%= link_to logout_path  do%>
          <i class='icon-circle-arrow-left'></i>
          Log out
        <% end %>
      </li>
    </ul>
  </div>
 
  <div class='right_button pull-right'>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
  </div>

<% else %>

  <div class='right_button pull-right'>
      <%= link_to "Log in", login_path, :class => 'btn btn-primary btn-small' %>
  </div>
  <div class='right_button pull-right'>
      <%= link_to "Register", register_path, :class => 'btn btn-success btn-small' %>
  </div>

<% end %>


