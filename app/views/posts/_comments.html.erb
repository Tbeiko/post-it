<div class='row'>
  <div class='span0 well text-center'>
    <% if logged_in? %> 
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %><br/>
    <% end %>
    <%= comment.total_votes %> Votes</br>
    <% if logged_in? %> 
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %></br>
    <% end %>
  </div>
  
  <div class='well span8'>
    <em>"<%= comment.body %>"</em></br>
    <% if @user %>
      <small> on <%= link_to comment.post.title, post_path(comment.post) %></small>
    <% end %>
    <small>posted by: <%= link_to comment.creator.username, user_path(comment.creator)%> on <%= display_datetime(comment.created_at) %></small>
  </div>
</div>