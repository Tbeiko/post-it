<p class='pull-right'>
  <%= link_to 'Return to index', posts_path %>
  [<%= link_to 'edit this post', edit_post_path(@post) %>]
</p>

<p>
<%= render @post.categories %> 
</p> 

<%= render 'shared/content_title', title: @post.title %>

<p>
  <%= @post.description %>
</p>
<hr/>

<%= render 'shared/errors', entry: @comment %>

<h5>Create a comment:</h5>
<%= form_for [@post, @comment] do |f| %>
  <%= f.text_area :body, rows: 3, class: "span5" %>
  <br/>
  <%= f.submit "Add comment", class: 'btn btn-primary' %>
<% end %>

<% unless @post.comments.count == 0 %>
    <h5>Comments</h5>

  <% @post.comments.each do |comment| %>
    <div class='well'>
      <em>"<%= comment.body %>"</em></br>
      <small>posted by: <%= link_to comment.creator.username, ''%> on <%= display_datetime(comment.created_at) %></small>
    </div>
  <% end %>
<% end %>

